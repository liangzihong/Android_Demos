<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">


    <fragment
        android:id="@+id/sf_fragment1"
        android:name="com.example.liangzihong.studyfragment.SimpleFragment1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        />


    <fragment
        android:id="@+id/sf_fragment2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.example.liangzihong.studyfragment.SimpleFragment2"
        android:layout_weight="1" />

    <Button
        android:id="@+id/sf_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
